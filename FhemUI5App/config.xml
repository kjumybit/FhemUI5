<?xml version='1.0' encoding='utf-8'?>
<widget id="de.kjumybit.fhem" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FhemUI5</name>
    <description>
        OpenUI5 frontend for Fhem.
    </description>
    <author email="hagen.kroeber@kjumybit.de" href="http://kjumybit.de">
        kjumybit
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/browser/favicon.ico" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/fhemui_36ico.png" />
        <icon density="mdpi" src="res/android/fhemui_48ico.png" />
        <icon density="hdpi" src="res/android/fhemui_72ico.png" />
        <icon density="xhdpi" src="res/android/fhemui_96ico.png" />
        <icon density="xxhdpi" src="res/android/fhemui_128ico.png" />
        <icon density="xxxhdpi" src="res/android/fhemui_192ico.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^7.1.4" />
</widget>
