<mvc:View controllerName="de.kjumybit.fhem.controller.Settings"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m" 
	displayBlock="true">
	<Page id="viewSettingsAbout" title="{i18n>cfgAboutTitle}" showNavButton="true" navButtonPress="onDetailBackBtnPress">
		<content>
			<form:SimpleForm
				editable="false"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="4"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="12"
				columnsL="12"
				columnsM="12"
				columnsS="12"
				singleContainerFullSize="true" >
				<form:content>
					<Title text="{i18n>cfgAboutTitle}"/>
					<Label text="FhemUI" />
					<Text text="Value" />
					<Label text="FhemJs" />
					<Text text="Value" />
					<Label text="OpenUI5" />
					<Text text="Value" />
					<Label text="Socket.IO" />
					<Text text="Value" />
					<Label text="Cordova" />
					<Text text="Value" />
				</form:content>
			</form:SimpleForm>
		</content> 
	</Page>
</mvc:View>