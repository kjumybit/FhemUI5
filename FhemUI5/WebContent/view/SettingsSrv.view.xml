<mvc:View controllerName="de.kjumybit.fhem.controller.Settings"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m" 
	displayBlock="true">
	<Page id="viewSettingsConn" title="{i18n>cfgSrvTitle}" showNavButton="true" navButtonPress="onDetailBackBtnPress">
		<content>
			<form:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="4"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="12"
				columnsL="12"
				columnsM="12"
				columnsS="12"
				singleContainerFullSize="true" >
				<form:content>
					<Title text="{i18n>cfgSrvConnection}"/>
					<Label text="{i18n>cfgSrvHost}" />
					<Input value="{settings>/server/host}" />
					<Label text="{i18n>cfgSrvPort}" />
					<Input value="{settings>/server/port}" />
					<Label text="{i18n>cfgConnSecure}" />
					<Switch state="{settings>/protocoll/secure}"/>
				</form:content>
			</form:SimpleForm>

			<form:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="4"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="12"
				columnsL="12"
				columnsM="12"
				columnsS="12"
				singleContainerFullSize="true" >
				<form:content>
					<Title text="{i18n>cfgUsrAuth}"/>
					<Label text="{i18n>cfgUsrName}" />
					<Input value="{settings>/authentication/userName}" />
					<Label text="{i18n>cfgUsrPassword}" />
					<Input value="{settings>/authentication/password}" />					
				</form:content>
			</form:SimpleForm>
		</content> 
	</Page>
</mvc:View>