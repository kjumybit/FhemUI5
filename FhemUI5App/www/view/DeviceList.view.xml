<mvc:View controllerName="de.kjumybit.fhem.controller.DeviceList"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	displayBlock="true">
	<Page id="viewDeviceList" title="{i18n>detailDeviceList}"  showNavButton="false" navButtonPress="onMenuBtnPress">
		<customHeader>
			<Bar design="Header">
				<contentLeft>
					<!-- show master view-->
					<Button icon="sap-icon://menu2" press="onMenuBtnPress" visible="{runtime>/header/masterBtnVisible}"/>
				</contentLeft>
				<contentMiddle>
					<Text text="{i18n>detailDeviceList}" wrapping="true" textAlign="Center"/>
				</contentMiddle>
			    <contentRight>
				</contentRight>
			</Bar>
		</customHeader>

		<content>
			
			<!-- <Panel backgroundDesign="Transparent" class="sapUiResponsiveMargin"> -->
			
				<Table id="tblDeviceList" 		
					items="{ path: 'Fhem>/DeviceSet',
								sorter : {
									path : 'Internals/TYPE',
									group : true
								},
								groupHeaderFactory: '.grouper.getDeviceSetGroupHeader' 				   
							}"
					updateFinished="onTableUpdateFinished"
					growing="true"
					growingScrollToLoad="true">
					<headerToolbar>
						<Toolbar>
							<Title text="{deviceDetails>/deviceTableTitle}" level="H2"/>
							<ToolbarSpacer/>
							<Button
								tooltip="View Sort Settings"
								icon="sap-icon://sort"
								press="handleSortButtonPressed" />
							<Button
								tooltip="View Filter Settings"
								icon="sap-icon://filter"
								press="handleFilterButtonPressed" />
							<Button
								tooltip="View Group Settings"
								icon="sap-icon://group-2"
								press="handleGroupButtonPressed" />
						</Toolbar>
					</headerToolbar>		
					<columns>
						<Column width="auto">	
							<Text text="{i18n>device}" />
						</Column>					
						<Column>	
							<Text text="{i18n>state}" />
						</Column>
						<Column minScreenWidth="Tablet">	
							<Text text="{i18n>stateTime}" />
						</Column>								
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onItemPress">
							<cells>
								<ObjectIdentifier 
									title="{ 
										parts:[{path:'Fhem>Attributes/alias'},{path:'Fhem>Name'}],
										formatter: '.formatter.getDeviceName'
									}"/>
								<Text text="{Fhem>Readings/state/Value}" />
								<Text text="{ path: 'Fhem>Readings/state/Time',
											type: 'sap.ui.model.type.DateTime', 
											formatOptions: {
												source: { pattern: 'yyyy-MM-dd HH:mm:ss' }
											}
								}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			<!-- </Panel> -->

		</content> 
		
		<footer>
			<core:Fragment fragmentName="de.kjumybit.fhem.view.FooterDefault" type="XML" />	
		</footer>
	</Page>
</mvc:View>