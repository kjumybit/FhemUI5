<mvc:View controllerName="de.kjumybit.fhem.controller.Settings"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m" 
	displayBlock="true">
	<Page id="viewSettings" title="{i18n>settingsTitle}" showNavButton="true" navButtonPress="onSettingsBackBtnPress">
		<content> 
			<List itemPress="onListItemPress">
				<items>
					<StandardListItem
						id="SettingsSrvView"
						title="{i18n>cfgSrvTitle}"
						icon="sap-icon://home"
						iconDensityAware="true"
						iconInset="true"
						type="Navigation" />
					<StandardListItem
						title="neue Einstellung"
						icon="sap-icon://action-settings"
						iconDensityAware="true"
						iconInset="true"
						type="Navigation" />
					<StandardListItem
						id="SettingsAboutView"
						title="{i18n>cfgAboutTitle}"
						icon="sap-icon://developer-settings"
						iconDensityAware="true"
						iconInset="true"
						type="Navigation"/>
				</items>
			</List>
		</content> 
	</Page>
</mvc:View>