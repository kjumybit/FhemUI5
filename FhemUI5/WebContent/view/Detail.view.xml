<core:View controllerName="de.kjumybit.fhem.controller.Detail"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:s="sap.m.semantic"
	displayBlock="true">
	<s:DetailPage id="viewDeviceList"
						title="{i18n>detailDeviceList}">
		<s:content>
			<Text text="Hello World Detail"/>
		</s:content> <!-- sap.ui.core.Control -->
		<s:messagesIndicator>
			<s:MessagesIndicator press="onMessagesButtonPress"/>
		</s:messagesIndicator>
		<s:customFooterContent>
			<OverflowToolbarButton 
				icon="{= ${runtime>/fhemConnection/isConnected} ? 'sap-icon://connected' : 'sap-icon://disconnected'}"  
				type="{= ${runtime>/fhemConnection/isConnected} ? 'Accept' : 'Reject'}"
				text="Fhem Service Connection" />
		</s:customFooterContent>
	</s:DetailPage>
</core:View>