<core:View controllerName="de.kjumybit.fhem.controller.Navigation"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:t="sap.tnt">
	<Page id="viewNavigation" 
		title="{i18n>navTitle}"
		backgroundDesign="Standard"		
		showNavButton="false" >
		
		<customHeader>
			<Toolbar width="100%">
					<Button icon="sap-icon://nav-back" press="onPressNavigationBack" />
					<ToolbarSpacer/>
					<!-- <Title text="{i18n>navTitle}"/> -->
			    	<!-- <Button icon="sap-icon://action-settings"/>  -->
			 </Toolbar>
		</customHeader>

		<content>
			<t:SideNavigation id="sideNavigation" class="sapUiForceWidthAuto" /> 
			
			<!-- no Padding, no margin -->
		</content>

		<footer>
			<Bar> 
				<contentRight>
			    	<Button icon="sap-icon://action-settings"/>
			    </contentRight>
			</Bar>		
		</footer>
		
	</Page>
</core:View>