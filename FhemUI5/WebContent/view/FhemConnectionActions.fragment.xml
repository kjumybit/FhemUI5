<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">

    <!-- Fhem connection: popover menue with adhoc actions and options-->
	<Popover
		title="{i18n>fhemConnectDlgTitle}"
		placement="Top" >
        <content>

	        <Table
                mode="none"
                showSeparators="none"
		        inset="false" 
                width="200px">
               <columns>
                    <Column hAlign="Begin">
                    </Column>
                    <Column width="4em" hAlign="Begin">
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{i18n>fhemConnectEventUpdate}"  />
                            <Switch state="true">
                                <layoutData>
                                    <FlexItemData growFactor="1" />
                                </layoutData>
                            </Switch>
                        </cells>
                    </ColumnListItem>        
                </items> 
            </Table>

            <!--
            <form:SimpleForm 
                editable="false"
                layout="ColumnLayout">                
                <form:content>
                    <Label text="i18n>fhemConnectEventUpdate" />
                         <Switch state="true">
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                        </Switch>
                </form:content>
            </form:SimpleForm>
            -->        
        </content>
	</Popover>    

</core:FragmentDefinition>