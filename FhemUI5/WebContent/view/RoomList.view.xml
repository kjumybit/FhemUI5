<mvc:View controllerName="de.kjumybit.fhem.controller.RoomList"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout"
	displayBlock="true">
	<Page id="viewRoomList" title="{i18n>RoomList}"  showNavButton="false">
		<customHeader>
			<Bar design="Header">
				<contentLeft>
					<!-- show master view-->
					<Button icon="sap-icon://menu2" press="onMenuBtnPress"/>
				</contentLeft>
				<contentMiddle>
					<Text text="{i18n>RoomList}" wrapping="true" textAlign="Center"/>
				</contentMiddle>
			    <contentRight>
				</contentRight>
			</Bar>
		</customHeader>
		<content>

			<!-- Tile List -->
			<Panel width="auto" backgroundDesign="Transparent" >
				<headerToolbar>
					<Toolbar>
						<Title text="Etage oder Gruppe"/>
					</Toolbar>
				</headerToolbar>
		
			<l:HorizontalLayout id="TileRoomList" allowWrapping="true" class="sapUiResponsiveContentPadding">
			</l:HorizontalLayout>
			</Panel>
			
		</content> 
				
		<footer>
			<core:Fragment fragmentName="de.kjumybit.fhem.view.FooterDefault" type="XML" />	
		</footer>
		
	</Page>
</mvc:View>